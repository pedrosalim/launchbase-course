{% extends "layout.njk" %}

{% block head %}
    <title>SOBRE - ROCKETSEAT</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="icon" href="https://raw.githubusercontent.com/Rocketseat/bootcamp-launchbase-desafios-02/master/desafios/favicon.ico" type="image/x-icon" />
{% endblock %}

{% block content %}


        <div class="foto">
            <img src="{{ about.image_url }}" alt="Imagem de {{ about.name }}">
            <h1><a href="https://rocketseat.com.br/">{{ about.name }}</a></h1>
            <h2>{{ about.description }}</h2>
        </div>

        <div id="pics" class="links">
        {% for link in about.links %}
            <a href="{{ link.url }}">{{ link.name }}</a>
        {% endfor %}
        </div>

{% endblock %}